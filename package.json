    "scripts": {
        "dev": "nodemon",
        "start": "node ./dist/index.js $*",
        "build": "npx rimraf dist && tsc",
        "clean": "npx rimraf node_module",
        "test:ci": "jest --passWithNoTests --forceExit",
        "test": "jest --watchAll --no-cache --detectOpenHandles"
    },
